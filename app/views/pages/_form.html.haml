= form_for @page do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  = f.hidden_field :ancestry if @page.ancestry
  - if @page.new_record?
    .field
      = f.label :slug
      = f.text_field :slug
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content, value:@page.formatted_content
  .actions
    = f.submit 'Save'
